<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_cancel_users"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="#FF5722"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:textColor="#FF5722"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin người dùng"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <EditText
            android:enabled="false"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_id_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="ID người dùng"
            android:textSize="18dp" />

        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_email_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email người dùng"
            android:textSize="18dp" />
        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_name_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Họ tên người dùng"
            android:textSize="18dp" />
        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_address_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Địa chỉ người dùng"
            android:textSize="18dp" />
        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_sdt_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Số điện thoại người dùng"
            android:textSize="18dp" />
        <EditText
            android:enabled="false"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_date_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ngày sinh"
            android:textSize="18dp" />
        <EditText
            android:enabled="false"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/edt_gender_users"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Giới tính"
            android:textSize="18dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>